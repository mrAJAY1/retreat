<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Retreat - Complete Signup</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/css/datepicker.min.css" />

    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="header">
        <img src="/assets/img/logo-no-background.svg" alt="Logo" />
        <h2>Complete Signup</h2>
      </div>
      <!-- FORM -->
      <form class="form" id="form">
        <div class="form__control">
          <input type="text" placeholder="First Name" id="firstName" />
          <i class="fa fa-check-circle"></i>
          <i class="fa fa-exclamation-circle"></i>
          <small>Error message</small>
        </div>
        <div class="form__control">
          <input type="text" placeholder="Last Name." id="lastName" />
          <i class="fa fa-check-circle"></i>
          <i class="fa fa-exclamation-circle"></i>
          <small>Error message</small>
        </div>
        <div class="form__control">
          <input type="text" id="birthDate" placeholder="select your birth date" />
          <i class="fa fa-check-circle"></i>
          <i class="fa fa-exclamation-circle"></i>
          <small>Error message</small>
        </div>
        <div class="form__control">
          <input type="email" value="<%= email %>" name="email" id="email" <%= isSocialSignup ? "disabled" : "" %>
          placeholder="Email" />
          <i class="fa fa-check-circle"></i>
          <i class="fa fa-exclamation-circle"></i>
          <small>Error message</small>
        </div>
        <button>Submit</button>
      </form>
      <!-- FORM END -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/js/datepicker-full.min.js"></script>
    <script>
      const dataEmail = "<%= email %>";
      const ssfKey = "<%= ssf_key %>";
      const isSocialSignup = "<%= isSocialSignup %>";
      const actionUrl = "<%= actionUrl %>";
    </script>
    <script type="module" src="/js/form.js"></script>
  </body>
</html>
